{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "platform": "github",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“Š Dependency Updates (Manual Review Required)",
  "labels": ["dependencies", "renovate"],
  "timezone": "Asia/Kolkata",
  "schedule": ["* 16 * * 1"],
  "prHourlyLimit": 1,
  "automerge": false,
  "packageRules": [
    {
      "description": "Github Actions Trusted vendors: Non-major updates",
      "extends": ["helpers:pinGitHubActionDigestsToSemver"],
      "matchPackagePatterns": [
        "^actions/",
        "^github/",
        "^google-github-actions/",
        "^opentofu/",
        "^docker/"
      ],
      "matchUpdateTypes": ["digest", "minor", "patch"],
      "groupName": "github-actions-trusted",
      "labels": ["non-major-update"]
    },
    {
      "description": "Github Actions Trusted vendors: Non-major updates",
      "extends": ["helpers:pinGitHubActionDigestsToSemver"],
      "matchUpdateTypes": ["digest", "minor", "patch"],
      "groupName": "github-actions-community",
      "labels": ["non-major-update"]
    },
    {
      "description": "Github Actions Community vendors: Major updates",
      "extends": ["helpers:pinGitHubActionDigestsToSemver"],
      "matchPackagePatterns": [
        "^actions/",
        "^github/",
        "^google-github-actions/",
        "^opentofu/",
        "^docker/"
      ],
      "matchUpdateTypes": ["major"],
      "groupName": "github-actions-trusted-major",
      "labels": ["major-update"]
    },
    {
      "description": "Github Actions Community vendors: Major updates",
      "extends": ["helpers:pinGitHubActionDigestsToSemver"],
      "matchUpdateTypes": ["major"],
      "groupName": "github-actions-community-major",
      "labels": ["major-update"]
    },
    {
      "description": "NPM: Non-major updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch", "minor"],
      "labels": ["non-major-update"]
    },
    {
      "description": "NPM: Major updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "labels": ["major-update"]
    }
  ]
}
